<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <TextView
        android:id="@+id/name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="beer name"
        android:textSize="33dp"
        android:textStyle="bold|italic" />
    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="176dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_detail"
        android:layout_marginTop="38dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/abv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/style_detail"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/image_detail"
        android:text="ABV"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/style_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/abv_detail"
        android:layout_centerVertical="true"
        android:text="STYLE"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/description_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_detail"
        android:layout_marginLeft="12dp"
        android:text="description"
        android:textSize="12dp" />

</RelativeLayout>


